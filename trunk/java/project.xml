<?xml version="1.0" encoding="UTF-8"?> 

<project> 

  <pomVersion>3</pomVersion>
    
  <id>progsjava</id>
  <artifactId>java</artifactId>
  <name>Programas em Java</name>
  <groupId>java</groupId>
  <currentVersion>0.1</currentVersion>
  <organization>
    <name>Instituto de Informática</name>
    <url>http://www.inf.ufg.br/</url>
  </organization>
  <inceptionYear>2004</inceptionYear>
  <package>progjava</package>

  <description>Java é uma das linguagens de programação mais empregadas
  atualmente. Este portal reúne informações sobre Java e, particularmente,
  disponibiliza softwares úteis a programadores.
  </description>
  
  <shortDescription>Aprendendo Java</shortDescription>

  <url>http://software.inf.ufg.br/java/</url>

  <issueTrackingUrl>
    http://nagoya.apache.org/scarab/servlet/scarab/
  </issueTrackingUrl>

  <siteAddress>software.inf.ufg.br</siteAddress>
  <siteDirectory>/java/</siteDirectory> 

  <build>
    <nagEmailAddress>fabio@inf.ufg.br</nagEmailAddress>

    <sourceDirectory>src</sourceDirectory> 

    <unitTestSourceDirectory>test</unitTestSourceDirectory>

    <aspectSourceDirectory />

    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
    </unitTest>

    <!-- J A R  R E S O U R C E S -->
    <!-- Resources that are packaged up inside the JAR file -->
    <resources>
      <resource>
        <directory>${basedir}/src/resources/misc</directory>
        <includes>
          <include>*.xsd</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/lib</directory>
        <includes>
          <include>log4j.properties</include>
        </includes>
      </resource>
    </resources>

  </build> 

</project>

