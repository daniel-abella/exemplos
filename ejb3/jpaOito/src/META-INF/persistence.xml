<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="jpaOito" transaction-type="RESOURCE_LOCAL">
    <provider>oracle.toplink.essentials.PersistenceProvider</provider>
    <class>oito.Campo</class>
    <class>oito.Propriedade</class>
    <properties>
      <property name="toplink.jdbc.user" value="sa"/>
      <property name="toplink.jdbc.password" value=""/>
      <property name="toplink.jdbc.url" value="jdbc:hsqldb:hsql://localhost/kyrios-teste"/>
      <property name="toplink.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
      <property name="toplink.target-database" value="HSQL"/>
      <property name="toplink.logging.logger" value="JavaLogger"/>
      <property name="toplink.logging.level" value="SEVERE"/>
    </properties>
  </persistence-unit>
</persistence>
